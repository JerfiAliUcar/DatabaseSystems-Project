@model CommentViewModel 
<form asp-controller="Iphone" asp-action="Comment" method="post">
    <input type="hidden" name="IphoneID" value="@Model.IphoneID" />
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" id="formGroupExampleInput" placeholder="Name">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Surname</label>
        <input type="text" name="Surname" class="form-control" id="formGroupExampleInput2" placeholder="Surname">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput3" class="form-label">Email Address</label>
        <input type="text" name="Email" class="form-control" id="formGroupExampleInput3" placeholder="Email">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput4" class="form-label">Phone Number</label>
        <input type="text" name="Phone" class="form-control" id="formGroupExampleInput4" placeholder="Phone">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput5" class="form-label">Comment</label>
        <input type="text" name="CommentText" class="form-control" id="formGroupExampleInput4" placeholder="Your Comment">
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>